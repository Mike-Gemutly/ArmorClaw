# Synapse Log Configuration
# Structured logging for production

version: 1

formatters:
  precise:
    format: '%(asctime)s - %(name)s - %(lineno)d - %(levelname)s - %(request)s - %(message)s'
  json:
    (): synapse.logging.formatters.JsonFormatter
    format: '%(asctime)s %(name)s %(lineno)d %(levelname)s %(request)s %(message)s'

handlers:
  console:
    class: logging.StreamHandler
    formatter: json
    stream: 'ext://sys.stdout'

  # Error logs to separate stream
  console_error:
    class: logging.StreamHandler
    formatter: precise
    level: ERROR
    stream: 'ext://sys.stderr'

loggers:
  synapse:
    level: WARNING
    handlers: [console, console_error]
    propagate: false

  synapse.storage.SQL:
    level: WARNING
    handlers: [console]
    propagate: false

  synapse.http:
    level: WARNING
    handlers: [console]
    propagate: false

  synapse.http.matrixfederationclient:
    level: WARNING
    handlers: [console]
    propagate: false

  # Debug for specific modules (uncomment if needed)
  # synapse.handlers:
  #   level: DEBUG

root:
  level: WARNING
  handlers: [console]

disable_existing_loggers: false
